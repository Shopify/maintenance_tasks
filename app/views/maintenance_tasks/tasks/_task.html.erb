<div class="box">
  <h3 class="title is-3">
    <%= link_to task, task_path(task) %>
    <%= status_tag(task.status) %>
  </h3>

  <% if run = task.last_run %>
    <h5 class="title is-5">
      <%= time_tag run.created_at, title: run.created_at %>
    </h5>
    <%= progress run %>

    <div class="content">
      <%= render "maintenance_tasks/runs/info/#{run.status}", run: run %>
    </div>
  <% end %>
</div>
